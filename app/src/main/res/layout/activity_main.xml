<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="设置"/>
    <Button
        android:id="@+id/tackpic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn"
        app:layout_constraintRight_toLeftOf="@+id/video_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="拍照"/>
    <Button
        android:id="@+id/video_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tackpic_btn"
        app:layout_constraintTop_toBottomOf="@id/btn"
        app:layout_constraintRight_toRightOf="parent"
        android:text="录像"/>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tackpic_btn"
        app:layout_constraintRight_toLeftOf="@+id/end_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="开始"/>
    <Button
        android:id="@+id/end_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/start_btn"
        app:layout_constraintTop_toBottomOf="@id/video_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:text="停止"/>
    <ImageView
        android:id="@+id/preview_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"/>
</android.support.constraint.ConstraintLayout>
